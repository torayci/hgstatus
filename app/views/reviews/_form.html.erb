<h3>Post a Review</h3>

<%= form_for [ @product, @review ] do |f| %>
	<p>
		<%= f.text_field :reviewer_name, :placeholder => "Name", :class => "form-control"%>
		<%= f.text_field :rating, :placeholder => "Rating (1-5)", :class => "form-control"%>
	</p>
	<p>
		<%= f.text_area :body, :placeholder => "Add a review...", :class => "form-control" %>
	</p>
	<p>
		<%= f.submit 'Submit', :class => "btn btn-default" %>
	</p>
	<br>
<%end%>