<div class="page-header">
  <h1><%=@product.name%>&nbsp;&nbsp;<small><%=@product.brand%></small></h1>
</div>

<div class="container-footer-margin">
	<div class="product-container">
	<%= link_to "<< Back", products_path, class: "btn btn-default"%>
	<%= link_to "Delete", product_path(@product), method: :delete, class: "btn btn-default", style:"float: right; margin: 10px;", data: {confirm: "Are you sure you want to delete?"}%>
		<%= link_to "Edit", edit_product_path(@product), class: "btn btn-default", style:"float: right; margin 10px"%>
		<div class="display-image">
			<%= image_tag @product.image%>
		</div>
		<p>
			Ingredients:
			<% @product.ingredients.each do |ingredient| %>
				<%= link_to ingredient.name, ingredient_path(ingredient) %>,
			<%end%>
		</p>
		<h3>Reviews (<%=@product.reviews.size%>)</h3>
		<%= render partial: 'products/review', collection: @product.reviews %>
		<%= render partial: 'reviews/form' %>
	</div>
</div>